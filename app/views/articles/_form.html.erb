<% if @article.errors.any? %>
<div class="alert alert-warning" role="alert">
    
    <h2> Error that prevented the article of being created </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
</div>
<% end %>

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f|  %>
            <div class="form-group">
                    <div class="control-label col-sm-2">
                        <%= f.label :title %>
                    </div>
                    <div class="col-sm-6">
                        <%= f.text_field :title, class: "form-control", placeholder: "Enter the title"  %>
                    </div>
            </div>
            <div class="form-group">
                    <div class="control-label col-sm-2">
                        <%= f.label :description %>
                    </div>
                    <div class="col-sm-6">
                        <%= f.text_area :description, class: "form-control", placeholder: "Enter the description", rows: "10"  %>
                    </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-12">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
                
            <div class="col-sm-offset-4 col-sm-8">
                <%= link_to "| Cancel creation and go back |", articles_path, class: "btn btn-xs btn-danger" %>
            </div>
        
        
        <% end %>

    </div>
</div>