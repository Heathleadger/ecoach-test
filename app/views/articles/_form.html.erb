<%= render 'shared/errors', obj: @article %>

        <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f|  %>
            <div class="form-group">
                    <div class="control-label col-sm-2">
                        <%= f.label :title %>
                    </div>
                    <div class="col-sm-6">
                        <%= f.text_field :title, class: "form-control", placeholder: "Enter the title"  %>
                    </div>
            </div>
            <div class="form-group">
                    <div class="control-label col-sm-2">
                        <%= f.label :description %>
                    </div>
                    <div class="col-sm-6">
                        <%= f.text_area :description, class: "form-control", placeholder: "Enter the description", rows: "10"  %>
                    </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-12">
                    <%= f.submit class: 'btn btn-default btn-lg' %>
                </div>
            </div>
                
            <div class="col-sm-offset-4 col-sm-8">
                <%= link_to "| Cancel creation and go back |", articles_path, class: "btn btn-xs btn-danger" %>
            </div>
        
        
        <% end %>
