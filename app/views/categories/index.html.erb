<h1 align="center"> List of categories</h1>
<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div align="center">
            <%= will_paginate %>
        </div>
        <ul class="list-group">
            <% @categories.each do |category| %>
                 <%= link_to "#{category.name}", category_path(category), class: "list-group-item btn" %>
            <% end %>            
        </ul>
        <div align="center">
            <%= will_paginate %>
        </div>
    </div>
</div>
