<h1 align="center"> Create new category</h1>
<div class="row">
    <div class="col-sm-12">
        <%= render 'shared/errors', obj: @category %>
        <%= form_for(@category, :html => { class: "form-horizontal", role: "form" }) do |f|  %>
            <div class="form-group">
                    <div class="control-label col-sm-2 col-sm-offset-2">
                        <%= f.label :name %>
                    </div>
                    <div class="col-sm-4">
                        <%= f.text_field :name, class: "form-control", placeholder: "Enter the Category"  %>
                    </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-5 ">
                    <%= f.submit class: 'btn btn-default btn-lg' %>
                </div>
            </div>
            <div class="col-sm-offset-4 col-sm-8">
                <%= link_to "| Cancel creation and go back |", articles_path, class: "btn btn-xs btn-danger" %>
            </div>
    <% end %>
      
    </div>
</div>