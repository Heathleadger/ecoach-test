<h1 align="center">Login</h1>

<%= form_for(:session, :html => { class: "form-horizontal", role: "form" }, url: login_path) do |f|  %>
    <div class="form-group">
            <div class="col-sm-2 col-sm-offset-5">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", autofocus: "true"  %>
            </div>
    </div>
    <div class="form-group">
            <div class="col-sm-2 col-sm-offset-5">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"  %>
            </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 col-sm-offset-5">
            <%= f.submit "Login", class: "btn btn-primary btn-block" %>                
        </div>
    </div>
        
    <div class="col-sm-offset-4 col-sm-8">
        <%= link_to "| Cancel creation and go back |", articles_path, class: "btn btn-xs btn-danger" %>
    </div>
<% end %>