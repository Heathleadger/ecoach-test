<div class="container-fluid">
  <div class="jumbotron">
    <h2 id="w_text">Encontre o melhor coach para seu estilo de jogo</h2> 
    <%= link_to "Cadastre-se ja", signup_path, class: "btn btn-primary btn-large" %>
  </div>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "E-coach", root_path, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Articles", articles_path %></li>
        <li><%= link_to "Users", users_path %></li>
        <% if logged_in? %>
          <li><%= link_to "New Article", new_article_path %></li>
        <% end %>
        <li class="disabled"><a href="#">Page 3</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav> 
</div>
